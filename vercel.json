{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      {
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/chat",
        "dest": "api/app.py"
      },
      {
        "src": "/api/health",
        "dest": "api/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ]
  }
